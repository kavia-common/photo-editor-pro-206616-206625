# Backend environment variables (DO NOT commit real secrets)

# Database container variables (must match db_env_vars from running container)
# Note: some environments provide POSTGRES_URL as a hostname (localhost) while others provide a full URL
# (postgresql://localhost:5000/myapp). The backend will normalize this.
POSTGRES_URL=localhost
POSTGRES_USER=appuser
POSTGRES_PASSWORD=changeme
POSTGRES_DB=myapp
POSTGRES_PORT=5001

# JWT settings
JWT_SECRET=please-generate-a-long-random-secret
ACCESS_TOKEN_EXPIRE_MINUTES=120

# CORS (comma-separated) - use '*' in dev; in prod set your frontend origin(s)
CORS_ALLOW_ORIGINS=http://localhost:3000

# Optional: used to return absolute URLs for image file endpoints in API responses.
# If omitted, API will return relative paths like /images/{id}/file.
PUBLIC_API_BASE_URL=http://localhost:8000

# Local storage directory for uploaded/edited images
IMAGE_STORAGE_DIR=storage
