        "type": "object",
        "required": [
          "value"
        ],
        "title": "AdjustRequest"
      },
      "Body_upload_image_images_upload_post": {
        "properties": {
          "file": {
            "type": "string",
            "format": "binary",
            "title": "File",
            "description": "Image file to upload"
          }
        },
        "type": "object",
        "required": [
          "file"
        ],
        "title": "Body_upload_image_images_upload_post"
      },
      "CropRequest": {
        "properties": {
          "x": {
            "type": "integer",
